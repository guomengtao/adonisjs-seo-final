<!DOCTYPE html>
<html lang="{{ lang || 'zh' }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
  <title>{{ title || (missingCase ? (lang === 'zh' ? '寻找 ' + (missingCase[`name_${lang}`] || missingCase.name) + ' - ' + (missingCase.missing_since ? missingCase.missing_since.substr(0, 4) + '年' : '') + (missingCase.missing_state ? missingCase.missing_state : '') + '失踪案件详情 - GUDQ 全球寻人' : (missingCase[`name_${lang}`] || missingCase.name) + ' Missing Person Case Details - ' + (missingCase.missing_since ? missingCase.missing_since.substr(0, 4) + ' - ' : '') + 'GUDQ Global Missing Persons') : (lang === 'zh' ? 'GUDQ 全球寻人 - 寻找失踪人员' : 'GUDQ Global Missing Persons Database')) }}</title>
  <meta name="description" content="{{ description || (missingCase ? (lang === 'zh' ? '寻找' + (missingCase[`name_${lang}`] || missingCase.name) + ' - ' + (missingCase.missing_since ? missingCase.missing_since.substr(0, 4) + '年' : '') + (missingCase.missing_state ? missingCase.missing_state : '') + '失踪人员案件详情，提供完整的寻人信息。' : (missingCase[`name_${lang}`] || missingCase.name) + ' Missing Person Case Details - ' + (missingCase.missing_since ? missingCase.missing_since.substr(0, 4) + ' - ' : '') + (missingCase.missing_state ? missingCase.missing_state : '') + ' | GUDQ Global Missing Persons Database.') : 'GUDQ Global Missing Persons Database - Helping find missing individuals worldwide.') }}">
  <link rel="canonical" href="{{ canonical || (lang === 'zh' ? 'https://cn.missing.gudq.com' : 'https://en.missing.gudq.com') }}{{ urlPathSegments.length ? '/' + urlPathSegments.join('/') : '' }}">
  
  <!-- CSS 引入 -->
  <link href="./dist/localtailwind.css" rel="stylesheet">
  <style>
    body { font-family: -apple-system, system-ui, sans-serif; -webkit-font-smoothing: antialiased; }
    .safe-bottom { padding-bottom: env(safe-area-inset-bottom); }
    /* 隐藏电脑端滚动条，保持简洁 */
    @media (min-width: 1024px) { ::-webkit-scrollbar { width: 6px; } ::-webkit-scrollbar-thumb { background: #334155; border-radius: 10px; } }
    
    /* 通用样式 */
    .content-container {
      max-width: 800px;
      margin: 0 auto;
    }
    .case-content img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      margin: 1rem 0;
    }
    .case-content h1, .case-content h2, .case-content h3 {
      margin-top: 1.5rem;
      margin-bottom: 1rem;
      font-weight: 700;
    }
    .case-content p {
      margin-bottom: 1rem;
      line-height: 1.6;
    }
    .case-content ul, .case-content ol {
      margin-left: 1.5rem;
      margin-bottom: 1rem;
    }
    .case-content li {
      margin-bottom: 0.5rem;
    }
    /* 将加粗文本设置为红色 */
    .case-content h2, .case-content h3 {
      color: #ef4444;
    }
  </style>
  
  <!-- JSON-LD 结构化数据 -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "GUDQ Global Missing Persons",
    "url": "https://gudata.org",
    "description": "Global Missing Persons Database - Professional platform to help find missing individuals",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://gudata.org/search?q={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
  </script>
  
  <!-- Person类型结构化数据 -->
  @if(missingCase)
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "{{ missingCase[`name_${lang}`] || missingCase.name }}",
    "gender": "{{ missingCase.sex }}",
    "birthDate": "{{ missingCase.date_of_birth }}",
    "height": "{{ missingCase.height }}"
  }
  </script>
  @endif
  
  <!-- 案件特定的BreadcrumbList结构化数据 -->
  @if(urlPathSegments && urlPathSegments.length > 0)
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "{{ lang === 'zh' ? '首页' : lang === 'es' ? 'Inicio' : 'Home' }}",
        "item": "{{ lang === 'zh' ? 'https://cn.missing.gudq.com' : lang === 'es' ? 'https://es.missing.gudq.com' : 'https://en.missing.gudq.com' }}"
      }
      @if(urlPathSegments.length >= 1)
      ,
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{ translatedPathSegments && translatedPathSegments[0] ? translatedPathSegments[0] : urlPathSegments[0] }}",
        "item": "{{ lang === 'zh' ? 'https://cn.missing.gudq.com' : lang === 'es' ? 'https://es.missing.gudq.com' : 'https://en.missing.gudq.com' }}/{{ urlPathSegments[0] }}"
      }
      @endif
      @if(urlPathSegments.length >= 2)
      ,
      {
        "@type": "ListItem",
        "position": 3,
        "name": "{{ translatedPathSegments && translatedPathSegments[1] ? translatedPathSegments[1] : urlPathSegments[1] }}",
        "item": "{{ lang === 'zh' ? 'https://cn.missing.gudq.com' : lang === 'es' ? 'https://es.missing.gudq.com' : 'https://en.missing.gudq.com' }}/{{ urlPathSegments[0] }}/{{ urlPathSegments[1] }}"
      }
      @endif
      @if(urlPathSegments.length >= 3)
      ,
      {
        "@type": "ListItem",
        "position": 4,
        "name": "{{ missingCase ? (missingCase[`name_${lang}`] || missingCase.name) : urlPathSegments[2] }}",
        "item": "{{ lang === 'zh' ? 'https://cn.missing.gudq.com' : lang === 'es' ? 'https://es.missing.gudq.com' : 'https://en.missing.gudq.com' }}/{{ urlPathSegments.join('/') }}"
      }
      @endif
    ]
  }
  </script>
  @endif
</head>